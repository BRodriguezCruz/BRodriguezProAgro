@model BL.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center" style="font-family: 'Times New Roman'">LISTA GENERAL DE USUARIOS</h1>
<br />
<hr />

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th class="text-center">EDITAR</th>
                <th class="text-center">ID USUARIO</th>
                <th class="text-center">NOMBRE</th>
                <th class="text-center">APELLIDO PATERNO</th>
                <th class="text-center">FECHA DE NACIMIENTO</th>
                <th class="text-center">RFC</th>
                <th class="text-center">ELIMINAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BL.Usuario registro in Model.ListaUsuarios)
            {
                <tr>
                    <td class="text-center"> <a href="@Url.Action("Form","Usuario", new {idUsuario = registro.IdUsuario})" class = "btn btn-warning">Editar</a> </td>
                    <td class="text-center">@registro.IdUsuario</td>
                    <td class="text-center">@registro.Nombre</td>
                    <td class="text-center">@registro.ApellidoPaterno</td>
                    <td class="text-center">@registro.FechaNacimiento</td>
                    <td class="text-center">@registro.RFC</td>
                    <td class="text-center"></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="@Url.Action("Form","Usuario")"  class="btn btn-outline-success">AGREGAR NUEVO USUARIO</a>

